<!-- EC Modal begins-->  
	<div id="extraCredit" class="reveal-modal">
		<p>Create <strong>Extra Credit</strong> (EC) column:</p>
		<div class="left row">
			<div class="small-7 large-4 columns">
				<p style="text-align:right;">Create a column in</p>
			</div>

			<div class="small-5 large-3 columns">
					<p>
						<select id="ECcolumn" style="">
							<option value="select">--EC Column--</option>
							<option value="-1">New EC Column</option>                   
						</select>
					</p>
			</div>

			<div class=" small-4 large-1 columns">
				<p style="text-align:right;">worth</p>
			</div>

			<div class="small-4 large-2 columns">
			<input type="text" id="ECpoints" style="" onChange="checkNumbers(this);" />
			</div>

			<div class="small-4 large-2 columns">
				<p>points</p>
				<p style="padding-left:1em;"><span id="XXXXX" class="small button" onClick="">create</span></p>
			</div>
	
		</div><!--end Row--> 

		<a class="close-reveal-modal">&#215;</a>		  
	</div><!-- EC Modal ends-->

	<!-- MP Modal begins-->  
	<div id="masteryPoints" class="reveal-modal">
		<p>Calculate <strong>Mastery Points</strong> (MP):</p>
	

<div><!--Select score Columns-->		
		<div class="row">
			<div class="small-6 large-offset-1 large-3 columns">
				<p style="text-align:right;"><strong>For</strong>&nbsp;&nbsp;student scores in</p>
			</div>

			<div class="small-6 large-3 columns">
					<p>
					 <select id="mastryCol" style="">
						<option value="select">--Select Column--</option>
						<option value="2">Assignment 1</option>
						<option value="3">Assignment 2</option>
						<option value="4">Assignment 3</option>
						<option value="5">Assignment 4</option>
						</select> 
					</p>
			</div>
			<div class="small-6 large-2 columns">
				<p style="text-align:center;"><strong>record</strong> MPs in</p>
			</div>

			<div class="small-6 large-3 columns">
					<p>
						<select id="select_MP_Column">
							<option value="select">--MP Column--</option>
							<option value="-1">New Column</option>										
						</select> 	
					</p>
			</div>

			<div class="large-1 columns">
			</div>
		</div><!--Row ends-->
</div><!--Select score Columns end-->	
<div><!--IFTHENOR-->	
		<div class="row">	
			<div class="small-6 small-offset-6-right large-offset-1 large-3 columns">
				<p style="text-align:right;"><strong>IF</strong>&nbsp;&nbsp;student score is</p>
			</div>


			<div class="small-7 large-3 columns">
					<p>
						<select id="select_Operator">
							<option value="select">--Select Formula--</option>
							<option value="1">more than or equal to [>=]</option>
							<option value="2">equal to [=]</option>
																
						</select> 	
					</p>
			</div>

			<div class="small-3 large-2 columns">
			<input type="text" id="ECpoints" style="" value="0" onChange="checkNumbers(this);" />
			</div>

			<div class="small-2 large-3 columns">
				<p>points</p>
			</div>

		</div><!--Row ends-->


		<div class="row">
			
			<div class="small-1 large-4 columns">
				<p>&nbsp;</p>
			</div>

			<div class="small-6 large-3 columns">
				<p style="text-align:right;"><strong>THEN</strong>&nbsp;&nbsp;student receives</p>
			</div>

			<div class="small-3 large-2 columns">
			<input type="text" id="ECpoints" style="" value="0" onChange="checkNumbers(this);" />
			</div>

			<div class="small-2 large-3 columns">
				<p>points</p>
			</div>

		</div><!--Row ends-->				

		<div class="row">
			
			<div class="small-1 large-4 columns">
				<p>&nbsp;</p>
			</div>

			<div class="small-6 large-3 columns">
				<p style="text-align:right;"><strong>OR</strong>&nbsp;&nbsp;student receives</p>
			</div>

			<div class="small-3 large-2 columns">
			<input type="text" id="ECpoints" style="" value="0" onChange="checkNumbers(this);" />
			</div>

			<div class="small-2 large-3 columns">
				<p>points</p>
			</div>

		</div><!--Row ends-->	

</div><!--IFTHENOR ends-->
	
	<div class="right">
		<p><span id="XXXXX" class="small button center" onClick="">record</span>&nbsp;&nbsp;</p>
	</div>

		<a class="close-reveal-modal">&#215;</a>		  
	</div><!-- MP Modal ends-->

<!-- BC Modal begins-->  
	<div id="blankScores" class="reveal-modal">
		<p>Replace <strong>Blank Scores</strong> (BS):</p>
		<div class="left row">
			<div class="small-7 large-4 columns">
				<p style="text-align:right;">Replace blank scores in</p>
			</div>

			<div class="small-5 large-3 columns">
					<p>
					 <select id="mastryCol" style="">
						<option value="select">--Select Column--</option>
						<option value="all">All Assignments</option>
						<option value="2">Assignment 1</option>
						<option value="3">Assignment 2</option>
						<option value="4">Assignment 3</option>
						<option value="5">Assignment 4</option>
						</select> 
					</p>
			</div>

			<div class=" small-4 large-1 columns">
				<p style="text-align:right;">with</p>
			</div>

			<div class="small-4 large-2 columns">
			<input type="text" id="ECpoints" style="" value="0" onChange="checkNumbers(this);" />
			</div>

			<div class="small-4 large-2 columns">
				<p>points</p>
				<p style="padding-left:1em;"><span id="XXXXX" class="small button" onClick="">replace</span>&nbsp;&nbsp;</p>
			</div>
		
		</div><!--end Row--> 

		<a class="close-reveal-modal">&#215;</a>		  
	</div><!-- BC Modal ends-->



